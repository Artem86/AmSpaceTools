<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
  <appSettings>
    <add key="EnvironmentProduction"
         value="https://amspace.amrest.eu"/>
    <add key="EnvironmentTest"
         value="https://amspacetest.amrest.eu" />
    <add key="ClientId"
         value="o6V5rMReyX5t4AIfbMpZkYrY3G3wvGrKqnpprnbq"/>
    <add key="GrantPermissionType"
         value="password"/>
  </appSettings>
  <system.net>
    <defaultProxy useDefaultCredentials="true" />
  </system.net>
  <log4net>
        <root>
          <appender-ref ref="CsvLogAppender"/>
        </root>
        <appender name="CsvLogAppender" type="AmSpaceTools.Infrastructure.CsvLogAppender">
          <file value="logs/" />
          <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
          <staticLogFileName value="false" />
          <appendToFile value="true" />
          <rollingStyle value="Composite" />
          <datePattern value="yyyy-MM-dd'.csv'" />
          <maxSizeRollBackups value="10" />
          <maximumFileSize value="1MB" />
          <layout type="log4net.Layout.DynamicPatternLayout">
              <param name="Header" value="Time,Level,Message,Exception%newline"/> 
              <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss},%-5level,%message,%exception{message}%newline" />
          </layout>
        </appender>
    </log4net>
</configuration>